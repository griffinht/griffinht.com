<html lang="en">
<head>
    {{> ../../head}}
    <style>
article {
    background-color: var(--neutral-background);
    max-width: 60em;
    margin: auto;
    padding: 2em;
}
.spacer {
    padding: 2em;
}
/* collapse on smaller devices */
@media (max-width: 45em) {
    .spacer {
        padding: 0.5em;
    }
    article {
        padding: 0.5em;
    }
}

img {
    width: 100%;
}

    </style>
</head>
<body>
    {{> ../../header}}
    <div class="spacer">
        <article>
            <h1>{{title}}</h1>
            <time datetime="{{datetime}}">{{datetime}}</time>
            (<a href="{{> ../../source}}">source</a>)
            {{{content}}}
        </article>
    </div>
</body>
</html>
