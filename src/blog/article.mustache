<html>
<head>
    {{> ../head}}
    <style>
body {
    display: flex;
    align-items: center;
}
article {
    background-color: white;
    max-width: 100em;
}
    </style>
</head>
<body>
    <article>
        <h1>{{title}}</h1>
        <date datetime="{{datetime}}">{{datetime}}</date>
        {{#content}}
        {{#header}}<h2>{{.}}</h2>{{/header}}
        {{#subheader}}<h3>{{.}}</h3>{{/subheader}}
        {{#img}}<img src="{{root}}{{.}}">{{/img}}
        {{#code}}<pre><code>{{.}}</code></pre>{{/code}}
        {{#paragraph}}<p>{{{.}}}</p>{{/paragraph}}
        {{/content}}
    </article>
    {{> ../footer}}
</body>
</html>
